function flipWord() {
  var sentenceElement = document.getElementById("read a book");
  var flippedElement = document.createElement("span");
  flippedElement.classList.add("read a book");

  // Replace the word with a flipped word
  var words = sentenceElement.innerHTML.split(" ");
  words[2] = "take a nap"; // Replace "read a book" with the word you want to show when flipped

  // Add the flipped word to the span element
  flippedElement.innerHTML = words.join("take a nap");

  // Toggle visibility
  if (sentenceElement.childNodes.length === 1) {
    sentenceElement.appendChild(flippedElement);
  } else {
    sentenceElement.removeChild(sentenceElement.childNodes[1]);
  }
}
